<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/blankFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:paddingBottom="@dimen/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pushImage"
            android:src="@drawable/logo_push"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/view_marginX1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <TextView
            android:text="Уведомлений пока нет"
            android:textSize="24sp"
            android:textColor="#101828"
            android:fontFamily="@font/gteestiprodisplay_bold"
            android:layout_margin="@dimen/view_marginX1"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <TextView
            android:id="@+id/info"
            android:textFontWeight="400"
            android:lineHeight="24sp"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="#475467"
            android:fontFamily="@font/gteestiprotext_regular"
            android:layout_margin="@dimen/view_marginX1"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>
