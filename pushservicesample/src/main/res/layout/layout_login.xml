<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:paddingBottom="@dimen/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo"
            android:src="@drawable/logo_login"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/view_marginX1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <TextView
            android:text="Вход"
            android:textSize="24sp"
            android:textColor="#101828"
            android:fontFamily="@font/gteestiprodisplay_bold"
            android:layout_margin="@dimen/view_marginX1"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <im.zgr.pushservice.application.ui.ViewEdit
            android:id="@+id/user"
            app:hint="Логин"
            android:layout_margin="@dimen/view_marginX1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <im.zgr.pushservice.application.ui.ViewPhone
            android:id="@+id/phone"
            app:hint="Телефон (необязательно)"
            android:layout_margin="@dimen/view_marginX1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/login"
            style="@style/BaseButtonStyle"
            android:text="Войти"
            android:layout_margin="@dimen/view_marginX1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>
