<resources>

    <style name="BaseTextInputLayoutStyle"
        parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlActivated">@color/blue_button</item>
        <item name="android:textColorHint">@color/outlined_box</item>
        <item name="hintTextColor">@color/outlined_box</item>
        <item name="boxStrokeColor">@color/outlined_box</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textAppearance"> </item>
    </style>

    <style name="EditTextUserNameStyle">
        <item name="android:inputType">text</item>
    </style>

    <style name="BaseButtonStyle">
        <item name="android:padding">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/gteestiprotext_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_frame</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="String">
        <item name="fontFamily">@font/gteestiprotext_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Text" parent="String">
        <item name="android:layout_marginStart">@dimen/view_marginX1</item>
        <item name="android:layout_marginEnd">@dimen/view_marginX1</item>
        <item name="android:textColor">#475467</item>
        <item name="fontFamily">@font/gteestiprotext_regular</item>
        <item name="lineHeight">20sp</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_track</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#475467</item>
        <item name="android:fontFamily">@font/gteestiprotext_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:showText">false</item>
        <item name="android:switchMinWidth">32dp</item>
    </style>

    <style name="Title" parent="String">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/gteestiprotext_medium</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="Title1" parent="Title">
        <item name="android:layout_marginStart">@dimen/view_marginX1</item>
        <item name="android:layout_marginEnd">@dimen/view_marginX1</item>
        <item name="android:layout_marginTop">@dimen/view_marginX1</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Title2" parent="Title">
        <item name="android:layout_marginStart">@dimen/view_marginX1</item>
        <item name="android:layout_marginEnd">@dimen/view_marginX1</item>
        <item name="android:layout_marginTop">@dimen/view_marginX1</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Frame">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/view_marginX1</item>
    </style>

</resources>
